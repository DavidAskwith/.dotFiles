[user]
email = dkaskwith@hotmail.com
name = David Askwith
[push]
default = simple

[alias]

# Logs
lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

# Merging
mt = mergetool

# Adding and committing
cm = commit -m
c = commit
a = add
aa = !git add -A && git status
au = !git add -u && git status
auc = !git add -u && git commit
aucm = !git add -u && git commit -m
s = status

# Diff
dt = difftool
d = diff
df = diff-tree --no-commit-id --name-only -r

# Pushing, Pulling and Fetching
f = fetch
plo = pull origin
po = push origin
pou = push -u origin HEAD

# Checkouts
# Comented due to override in powershell for COMS
co = checkout
cob = checkout -b

[diff]
tool = gvimdif

[merge]
tool = gvimdiff
